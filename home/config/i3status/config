# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        output_format = i3bar
}

order += "ipv6"
order += "ipv4"
order += "disk /"
order += "disk /home"
#order += "wireless _first_"
order += "ethernet _first_"
order += "run_watch VPN"
order += "tztime holder__dunst_paused"
order += "tztime holder__keyboard"
order += "volume master"
order += "battery all"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "tztime local"

tztime holder__keyboard {
  format = "holder__keyboard"
}

tztime holder__dunst_paused {
  format = "holder__dunst_paused"
}

wireless _first_ {
  format_up = "W: %ip (%essid%quality, %bitrate)"
  format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "/ %avail"
}

disk "/home" {
        format = "/home %avail"
}

volume master {
    format = "V: %volume"
    format_muted = "V: MUTED"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

run_watch VPN {
    pidfile = "/sys/devices/virtual/net/tun*"
}

cpu_usage {
	format = "CPU: %usage"
}

cpu_temperature 0 {
  format = "T: %degrees °C"
}

