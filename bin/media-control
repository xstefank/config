#!/bin/bash
#
# This is a rather minimal example Argbash potential
# Example taken from http://argbash.readthedocs.io/en/stable/example.html
#

# ARG_OPTIONAL_BOOLEAN([playpause],[],[play or pause media])
# ARG_OPTIONAL_BOOLEAN([next],[],[next media])
# ARG_OPTIONAL_BOOLEAN([previous],[],[previous media])
# ARG_HELP([Media control preferring spotify and fallbacking to playerctl])
# ARGBASH_GO()
# needed because of Argbash --> m4_ignore([
### START OF CODE GENERATED BY Argbash v2.11.0 one line above ###
# Argbash is a bash code generator used to get arguments parsing right.
# Argbash is FREE SOFTWARE, see https://argbash.dev for more info
# Generated online by https://argbash.dev/generate


die()
{
	local _ret="${2:-1}"
	test "${_PRINT_HELP:-no}" = yes && print_help >&2
	echo "$1" >&2
	exit "${_ret}"
}


begins_with_short_option()
{
	local first_option all_short_options='h'
	first_option="${1:0:1}"
	test "$all_short_options" = "${all_short_options/$first_option/}" && return 1 || return 0
}

# THE DEFAULTS INITIALIZATION - OPTIONALS
_arg_playpause="off"
_arg_next="off"
_arg_previous="off"


print_help()
{
	printf '%s\n' "Media control preferring spotify and fallbacking to playerctl"
	printf 'Usage: %s [--(no-)playpause] [--(no-)next] [--(no-)previous] [-h|--help]\n' "$0"
	printf '\t%s\n' "--playpause, --no-playpause: play or pause media (off by default)"
	printf '\t%s\n' "--next, --no-next: next media (off by default)"
	printf '\t%s\n' "--previous, --no-previous: previous media (off by default)"
	printf '\t%s\n' "-h, --help: Prints help"
}


parse_commandline()
{
	local _key
	while test $# -gt 0
	do
		_key="$1"
		case "$_key" in
			--no-playpause|--playpause)
				_arg_playpause="on"
				test "${1:0:5}" = "--no-" && _arg_playpause="off"
				;;
			--no-next|--next)
				_arg_next="on"
				test "${1:0:5}" = "--no-" && _arg_next="off"
				;;
			--no-previous|--previous)
				_arg_previous="on"
				test "${1:0:5}" = "--no-" && _arg_previous="off"
				;;
			-h|--help)
				print_help
				exit 0
				;;
			-h*)
				print_help
				exit 0
				;;
			*)
				_PRINT_HELP=yes die "FATAL ERROR: Got an unexpected argument '$1'" 1
				;;
		esac
		shift
	done
}

parse_commandline "$@"

# OTHER STUFF GENERATED BY Argbash

### END OF CODE GENERATED BY Argbash (sortof) ### ])
# [ <-- needed because of Argbash

spotifycli --status >/dev/null
readonly IS_SPOTIFY_RUNNING=$?

if [ "$_arg_playpause" == "on" ]; then
  if [ "$IS_SPOTIFY_RUNNING" -eq 0 ]; then spotifycli --playpause; else playerctl play-pause; fi
elif [ "$_arg_next" == "on" ]; then
  if [ "$IS_SPOTIFY_RUNNING" -eq 0 ]; then spotifycli --next; else playerctl next; fi
elif [ "$_arg_previous" == "on" ]; then
  if [ "IS_SPOTIFY_RUNNING" -eq 0 ]; then spotifycli --previous; else playerctl previous; fi
else
  echo "No parameter provided."
  print_help
fi

# ] <-- needed because of Argbash
#
